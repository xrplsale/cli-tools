{
  "name": "@xrplsale/cli",
  "version": "1.0.0",
  "description": "Official CLI tools for the XRPL.Sale platform - the native XRPL launchpad for token sales and project funding",
  "main": "dist/index.js",
  "bin": {
    "xrplsale": "./bin/xrplsale.js",
    "xrpl-sale": "./bin/xrplsale.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm publish"
  },
  "keywords": [
    "xrpl",
    "blockchain",
    "cryptocurrency",
    "token-sale",
    "launchpad",
    "defi",
    "cli",
    "command-line"
  ],
  "author": "XRPL.Sale Team <developers@xrpl.sale>",
  "license": "MIT",
  "homepage": "https://xrpl.sale",
  "repository": {
    "type": "git",
    "url": "https://github.com/xrplsale/cli-tools.git"
  },
  "bugs": {
    "url": "https://github.com/xrplsale/cli-tools/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "table": "^6.8.1",
    "moment": "^2.29.4",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "open": "^9.1.0",
    "clipboard": "^2.0.11",
    "qrcode-terminal": "^0.12.0",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}